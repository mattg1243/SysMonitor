{
  "name": "electron-sysinfo",
  "productName": "SysMonitor",
  "version": "1.0.0",
  "description": "A simple resource monitor app built with Electron and React",
  "main": "./dist/main.js",
  "homepage": "./",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watch",
    "start": "electron-forge start",
    "devstart": "concurrently \"tsc -w\" \"electron .\"",
    "watch": "tsc -w",
    "format": "prettier --config .prettierrc.json 'src/**/*.ts' --write",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "typeRoots": [
    "./node_modules/@types"
  ],
  "dependencies": {
    "@electron-forge/shared-types": "^6.0.0-beta.67",
    "@electron/remote": "^2.0.8",
    "dotenv": "^16.0.3",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.0",
    "faker": "^6.6.6",
    "keyv": "^4.5.0",
    "node-os-utils": "^1.3.7",
    "os-utils": "^0.0.14",
    "systeminformation": "^5.12.6",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@electron-forge/publisher-github": "^6.0.0-beta.67",
    "@faker-js/faker": "^7.5.0",
    "@testdeck/mocha": "^0.2.1",
    "@types/jest": "^29.2.0",
    "@types/keyv": "^4.2.0",
    "@types/node": "^18.11.3",
    "@types/node-fetch": "^2.6.2",
    "@types/node-os-utils": "^1.3.0",
    "@types/os-utils": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "chai": "^4.3.6",
    "concurrently": "^7.4.0",
    "electron": "^21.2.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.24.0",
    "jest": "^29.2.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "config": {
    "forge": {
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "mattg1243",
              "name": "SysMonitor"
            },
            "prerelease": false,
            "draft": true
          }
        }
      ],
      "packagerConfig": {
        "executableName": "electron-sysinfo"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_sysinfo"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "executableName": "SysMonitor"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
